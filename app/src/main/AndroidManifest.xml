<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.project.rm.unifreeclassrooms">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Pagina principale -->
        <activity
            android:name="com.project.rm.unifreeclassrooms.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- Activity Aule Libere -->
        <activity
            android:name="com.project.rm.unifreeclassrooms.FreeClassActivity"
            android:label="Aule Libere"
            android:parentActivityName="com.project.rm.unifreeclassrooms.MainActivity"
            android:screenOrientation="portrait"></activity>
        <!-- Activity Bacheca Messaggi -->
        <activity android:name="com.project.rm.unifreeclassrooms.MessageBoardActivity"
            android:label="Bacheca Messaggi"
            android:parentActivityName="com.project.rm.unifreeclassrooms.MainActivity"
            android:screenOrientation="portrait"></activity>
        <!-- Activity Profilo -->
        <activity
            android:name="com.project.rm.unifreeclassrooms.AccountActivity"
            android:label="Profilo"
            android:parentActivityName="com.project.rm.unifreeclassrooms.MainActivity"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>